{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "dom"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "skipLibCheck": true,  // Uncomment this line if you have issues with type checking in node_modules
    "types": ["@testing-library/jest-dom"]
  },
  "include": [
    "renderers/**/*.ts",
    "renderers/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "contexts/**/*.ts",
    "contexts/**/*.tsx",
    "services/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx", 
    "api/**/*.ts",
    "stories/**/*.ts", 
    "stories/**/*.tsx",
    "types.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "constants/**/*.ts",
    "utils/**/*.ts"
  ]
}
