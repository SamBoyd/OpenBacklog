# OpenBacklog Community Edition - Development Configuration
# This file is committed to git and provides working defaults for local development.
# DO NOT use these values in production!

# === Core Settings ===
environment=development
app_url=http://localhost:8000
app_domain=localhost
static_site_url=http://localhost:8000
static_site_domain=localhost
postgrest_domain=http://postgrest:3000
mcp_server_domain=http://localhost:8000

# === Database ===
database_name=openbacklog
database_app_user_username=openbacklog
database_app_user_password=openbacklog_dev_password
database_url=postgresql://openbacklog:openbacklog_dev_password@postgres:5432/openbacklog
async_database_url=postgresql+asyncpg://openbacklog:openbacklog_dev_password@postgres:5432/openbacklog

# === PostgREST Roles ===
postgrest_authenticator__role=authenticator
postgrest_authenticator__password=authenticator_password
postgrest_anonymous__role=anonymous
postgrest_authenticated_role=authenticated

# === Security (dev-only - NOT for production!) ===
csrf_token_secret_key=dev-csrf-secret-change-in-production
dev_jwt_secret=dev-jwt-secret-change-in-production

# === Docker Infrastructure ===
CLUSTER_NAME=dev
DOCKER_NETWORK_NAME=dev-net
NGINX_PORT=80
FASTAPI_PORT=8000
POSTGREST_PORT=3000
POSTGRES_PORT=5433
POSTGRES_USER=openbacklog
POSTGRES_PASSWORD=openbacklog_dev_password
POSTGRES_DB=openbacklog
POSTGRES_DB_PRIVATE_SCHEMA=private
POSTGRES_ANONYMOUS_ROLE=anonymous
POSTGREST_JWT_ROLE_CLAIM_KEY=.role

# === Auth (dev mode - no external provider needed) ===
auth_provider=dev

# === Optional Features (empty = disabled) ===
github_app_id=
github_app_private_key=
github_webhook_secret=
cloudflare_account_id=
r2_access_key_id=
r2_secret_access_key=
r2_profile_picture_bucket_name=
default_profile_picture=
sentry_url=
